<!-- pages/wallet/index.wxml -->
<view class='container'>
  <view class='overage'>
    <view class='overage-header'>
      <text>我的余额</text>
    </view>
    <view class='overage-content'>
      <text>{{money}}</text>
    </view>
    <view class='overage-desc'>
      <text>余额说明</text>
    </view>
  </view>
  <button class='btn-add' bindtap='moveToChange'>充值</button>
  <view class='my-ticket tapbar'>
    <text>我的用车劵</text>
    <text>{{ticket}}张</text>
  </view>
  <view class='my-deposit tapbar'>
    <text>我的押金</text>
    <text>
      <text class='color'>99元,押金退款</text>
      >
    </text>
  </view>
  <view class='about tapbar'>
    <text>关于ofo</text>
    <text>></text>
  </view>
</view>